<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="{{ site.siteDescription }}" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/reset.css" />
    <link rel="stylesheet" href="/assets/css/variables.css" />
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" defer></script>
    <script src="assets/js/index.js" defer></script>
    <title>{{ site.siteTitle }}</title>
</head>
<body>
    <header>
<nav class="nav">
  <div class="nav-container">
    <a class="nav-link {{ 'highlighted-text' if page.url == '/' }}" href="/" {{ 'aria-current="page"' if page.url == '/' }}>Home</a>
    <a class="nav-link {{ 'highlighted-text' if page.url == '/gallery/' }}" href="/gallery/" {{ 'aria-current=page' if page.url == '/gallery/' }}>Gallery</a>
    <a class="nav-link {{ 'highlighted-text' if page.url == '/about/' }}" href="/about/" {{ 'aria-current=page' if page.url == '/about/' }}>About</a>
    <a class="nav-link {{ 'highlighted-text' if page.url == '/contact/' }}" href="/contact/" {{ 'aria-current=page' if page.url == '/contact/' }}>Contact Us</a>
  </div>
</nav>

    </header>
    
    <main>
        {{ content | safe }}
    </main>

    <section class="social section">
      <h2 class="social-heading heading">Follow {{ site.artistName }}</h2>
      <div class="social-container container">
        {% if site.social.instagram %}
        <a
          target="_blank"
          rel="noopener noreferrer"
          class="social-link"
          href="{{ site.social.instagram }}"
        >
          <img
            class="social-img"
            src="/assets/images/instagram.png"
            alt="Instagram"
          />
        </a>
        {% endif %}

        {% if site.social.youtube %}
        <a
          target="_blank"
          rel="noopener noreferrer"
          class="social-link"
          href="{{ site.social.youtube }}"
        >
          <img
            class="social-img"
            src="/assets/images/youtube.png"
            alt="Youtube"
          />
        </a>
        {% endif %}

        {% if site.social.facebook %}
        <a
          target="_blank"
          rel="noopener noreferrer"
          class="social-link"
          href="{{ site.social.facebook }}"
        >
          <img
            class="social-img"
            src="/assets/images/facebook.png"
            alt="Facebook"
          />
        </a>
        {% endif %}

        {% if site.social.tiktok %}
        <a
          target="_blank"
          rel="noopener noreferrer"
          class="social-link"
          href="{{ site.social.tiktok }}"
        >
          <img
            class="social-img"
            src="/assets/images/tiktok.png"
            alt="Tiktok"
          />
        </a>
        {% endif %}
      </div>
    </section>
    
    <footer>
      <p>Â© {{ site.copyrightYear }} {{ site.artistName }}</p>
    </footer>
</body>
</html>